<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :task, id: :task_task, class: "form-control", placeholder: "Task" %>
  </div>

  <div class="form-group">
    <%= form.text_field :duration, id: :task_duration, class: "form-control", placeholder: "Duration" %>
  </div>

  <div class="field">
    <%= form.text_field :quantity, id: :task_quantity, class: "form-control", placeholder: "Quantity" %>
  </div>

  <div class="field">
    <%= form.text_field :notes, id: :task_notes, class: "form-control", placeholder: "Notes", id: "notes" %>
  </div>

  <div class="field">
    <%= form.text_field :completed, id: :task_completed, class: "form-control", placeholder: "Completed", id: "completed" %>
  </div>


    <%= form.hidden_field :user_id, id: :task_user_id, value: session[:user_id] %>


  <div class="actions ">
    <%= form.submit class: 'btn btn-primary btn-lg' %>
  </div>

<% end %>

