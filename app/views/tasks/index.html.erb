

<p id="notice"><%= notice %></p>

<h1 class='text-center'>Tasks</h1>

    <div class="table-responsive">
        <table class="table" id="table">
            <thead>
                <tr>
                    <th>Task </th>
                    <th>Duration </th>
                    <th>Quantity </th>
                    <th>Notes </th>
                    <th>Completed </th>
                </tr>
            </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task %></td>
        <td><%= task.duration %></td>
        <td><%= task.quantity %></td>
        <td><%= task.notes %></td>
        <td><%= task.completed %></td>
        <td><%= link_to 'Show', task, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-md" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary", id: "tableButton" %>

