  <div class="field">
    <%= form.text_field :username, id: :user_username, class: "form-control", placeholder: "Username" %>
  </div>

  <div class="field">
    <%= form.text_field :email, id: :user_email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
  </div>

  <div class="actions">
     <%= form.submit class: 'btn btn-primary btn-lg' %>
  </div>
</form>
<% end %>
